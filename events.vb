Event &ImprimeTodasContas.IsValid

	If &ImprimeTodasContas = True
		TextBlockCTBPlanoContaInicio.Visible = False
		&CTBPlanoContaInicio.Visible 		 = False
		TextBlockCTBPlanoContaFinal.Visible  = False
		&CTBPlanoContaFinal.Visible  		 = False
	Else
		TextBlockCTBPlanoContaInicio.Visible = True
		&CTBPlanoContaInicio.Visible 		 = True
		TextBlockCTBPlanoContaFinal.Visible  = True
		&CTBPlanoContaFinal.Visible 		 = True
	EndIf

EndEvent

Event &ImprimeTotalDia.IsValid

	If &ImprimeTotalDia = True
		TextBlockImprimeTotalMes.Visible = False
		&ImprimeTotalMes.Visible 		 = False
	Else
		TextBlockImprimeTotalMes.Visible = True
		&ImprimeTotalMes.Visible 		 = True
	EndIf

EndEvent

Event &ImprimeTotalMes.IsValid

	If &ImprimeTotalMes = True
		TextBlockImprimeTotalDia.Visible = False
		&ImprimeTotalDia.Visible 		 = False
	Else
		TextBlockImprimeTotalDia.Visible = True
		&ImprimeTotalDia.Visible 		 = True
	EndIf

EndEvent


