	If NOT &CTBLancDatainicio.IsEmpty() OR NOT &CTBLancDatafinal.IsEmpty()
		If &ImprimeTodasContas = True				
			RCTBRazaoAnalitico.Call(&CTBLancDatainicio, &CTBLancDatafinal, '', '', &ImprimeTodasContas, &ImprimeCentroCusto, &ImprimeCodRed, 
			&ImprimeContasSemMov, &ImprimePaginaEntreContas, &ImprimeTotalDia, &ImprimeTotalMes, &ImprimirTotalDebCred)		
		Else
			RCTBRazaoAnalitico.Call(&CTBLancDatainicio, &CTBLancDatafinal, &CTBPlanoContaInicio, &CTBPlanoContaFinal, &ImprimeTodasContas,
